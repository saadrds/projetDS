<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180sp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="5dp"
    android:background="#EDF2F6"
    android:clickable="true"
    android:fadeScrollbars="true"
    android:outlineAmbientShadowColor="@color/cardview_dark_background"
    android:paddingLeft="3dp"
    android:paddingTop="3dp"
    android:paddingRight="3dp"
    android:paddingBottom="3dp"
    android:visibility="visible"
    tools:visibility="visible">

    <TextView

        android:id="@+id/Recap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="sans-serif-black"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/recap1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/recap1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:text="TextView"
        android:textColor="#A1F10606"
        app:layout_constraintBottom_toTopOf="@+id/recap2"
        app:layout_constraintStart_toStartOf="@+id/recap2"
        app:layout_constraintTop_toBottomOf="@+id/Recap" />

    <TextView

        android:id="@+id/recap2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:text="TextView"
        android:textColor="#A1F10606"
        app:layout_constraintBottom_toTopOf="@+id/recap3"
        app:layout_constraintEnd_toEndOf="@+id/recap3"
        app:layout_constraintTop_toBottomOf="@+id/recap1" />

    <TextView

        android:id="@+id/recap3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="11dp"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:text="TextView"
        android:textColor="#A1F10606"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recap2" />

</androidx.constraintlayout.widget.ConstraintLayout>